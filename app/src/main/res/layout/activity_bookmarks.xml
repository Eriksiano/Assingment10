<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmarks_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookmarksActivity"
    >
    <TextView
        android:id="@+id/bookmarks_textview_no_bookmarks"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No bookmarks"
        android:textAppearance="@style/BreadText"
        />
    <ListView
        android:id="@+id/bookmarks_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/bookmarks_button_back"
        />

    <Button
        android:id="@+id/bookmarks_button_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:text="cancel   "
        android:textAppearance="@style/ButtonText"
        android:drawableLeft="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/bookmarks_root"
        />

</androidx.constraintlayout.widget.ConstraintLayout>